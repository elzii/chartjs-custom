@import "_helpers";
@import "_typography";



#chartjs-container {
  position: relative;
  display:block;
  // width:100%;
  width:100%;
  height:500px;
  padding:0;
  // overflow:hidden;
  // margin:20px auto;

    
  &:before {
    content:'';
    position: absolute;
    top:0;left:0;
    width:100%;
    background-color: rgba(250, 210, 162, 1.0);
    // z-index:100; 
    
    // Hack
    height: calc(100% - 35px);
  }
}
.chartjs-wrap { }
  
#chart { }
  canvas {
    position:relative;
    z-index:10;
    border:none;
    box-sizing:border-box;
    display:block;
    width: 100% !important;
    // width: calc(100% + 22px) !important;
    // margin-left:-12px;
    // height:100%;
    
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
  }


#chartjs-tooltip {
  opacity: 1;
  position: absolute;
  background: rgba(0, 0, 0, .7);
  color: white;
  border-radius: 3px;
  pointer-events: none;
  
  transition: all .1s ease;
  transform: translate(-50%, 0);
}
.chartjs-tooltip-key {
  display: inline-block;
  width: 10px;
  height: 10px;
}



.section {
  width:100%;
  padding:60px 0;
  
  &.section--content {
    background-color: #efefef;
    background-image: radial-gradient(circle 980px at 55.83% 14.43%, transparent 0%, rgba(0, 90, 164, 0.01) 100%, rgba(36, 43, 51, 0.01) 100%);
  }
  

}



